{
    "manifest_version": 2,
    "name": "GTasks",
    "author": "DarkMannn",
    "version": "1.0.0",
    "description": "Google Tasks extension for power users.",
    "icons": {
      "16": "images/16.png",
      "32": "images/32.png",
      "48": "images/48.png",
      "128": "images/128.png"
    },
    "web_accessible_resources": ["https://apis.google.com/js/api.js"],
    "browser_action": {
        "default_popup": "index.html",
        "default_title": "ajde majku mu"
    },
    "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'",
    "content_scripts" : [
        {
            "matches": [ "<all_urls>" ],
            "css": [],
            "js": []
        }
    ]
}
