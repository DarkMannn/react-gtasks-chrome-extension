{
    "manifest_version": 2,
    "name": "Popup for Tasks",
    "author": "DarkMannn",
    "version": "1.0.0",
    "description": "Google Tasks Popup For Chrome",
    "key": "<INSERT_KEY>",
    "oauth2": {
        "client_id": "<INSERT_CLIENT_ID>",
        "scopes": ["https://www.googleapis.com/auth/tasks"]
    },
    "permissions": [
        "identity",
        "storage"
    ],
    "icons": {
      "16": "images/16.png",
      "32": "images/32.png",
      "48": "images/48.png",
      "128": "images/128.png"
    },
    "browser_action": {
        "default_popup": "index.html",
        "default_title": "Open Google Tasks Popup"
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "windows": "Ctrl+Shift+K",
                "mac": "Command+Shift+K",
                "chromeos": "Ctrl+Shift+K",
                "linux": "Ctrl+Shift+K"
            }
        }
    },
    "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'"
}
